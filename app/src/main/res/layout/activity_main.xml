<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:layout_weight="0.3"
    android:orientation="vertical"
    tools:context="com.whats_meal.term_project.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.08"
        android:background="@color/main_green"

        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="vertical"
            tools:ignore="NestedWeights">

            <TextView
                android:id="@+id/cam_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/scd6"
                android:includeFontPadding="false"
                android:text="@string/campus_name"
                android:textAlignment="textEnd"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/diner_type"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:fontFamily="@font/scd6"
                android:includeFontPadding="false"
                android:text="@string/rest_naem"
                android:textAlignment="textEnd"
                android:textColor="@color/black"
                android:textSize="15sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:layout_weight="1.2"
            android:autoSizeMaxTextSize="33sp"
            android:autoSizeMinTextSize="27sp"
            android:autoSizeTextType="uniform"
            android:fontFamily="@font/scd6"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="@string/_12_03"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="27sp"
            tools:ignore="RtlCompat" />
        <TextView
            android:id="@+id/day"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.5"
            android:layout_marginEnd="10dp"
            android:autoSizeMaxTextSize="33sp"
            android:autoSizeMinTextSize="20sp"
            android:autoSizeTextType="uniform"
            android:fontFamily="@font/scd6"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text=""
            android:textAlignment="center"
            android:textColor="@color/black"
            android:singleLine="true"
            android:ellipsize="none"
            android:textSize="20sp"
            tools:ignore="RtlCompat" />

        <ImageView
            android:id="@+id/notification"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_marginEnd="25dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.5"
            android:src="@drawable/baseline_notifications_black_48"
            android:contentDescription="@string/notification" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/view_page"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.75"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingTop="50dp"
        android:paddingBottom="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:layout_weight="0.18"
            android:background="@drawable/border_radius_top"

            tools:ignore="NestedWeights">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_marginStart="15dp"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:layout_weight="0.15">

                <ImageView
                    android:id="@+id/food_type_icon"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_weight="0.5"
                    android:contentDescription="TODO"
                    android:src="@drawable/sun_morning"
                    tools:ignore="ContentDescription,HardcodedText" />
                <TextView
                    android:id="@+id/food_type"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_weight="0.6"
                    android:autoSizeMaxTextSize="13sp"
                    android:autoSizeMinTextSize="10sp"
                    android:fontFamily="@font/scd5"
                    android:gravity="center"
                    android:text="중식"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:singleLine="true"
                    android:ellipsize="none"
                    android:autoSizeTextType="uniform"
                    android:textSize="10sp"
                    tools:ignore="HardcodedText,SmallSp" />
            </LinearLayout>

            <TextView
                android:id="@+id/food_time"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:layout_margin="15dp"
                android:autoSizeMaxTextSize="20sp"
                android:autoSizeMinTextSize="18sp"
                android:autoSizeTextType="uniform"
                android:ellipsize="none"
                android:fontFamily="@font/scd5"
                android:gravity="center"
                android:includeFontPadding="false"
                android:singleLine="true"
                android:text="11:40 ~ 13:30"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="18sp"
                tools:ignore="HardcodedText,RtlSymmetry" />

            <ImageButton
                android:id="@+id/share"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_weight="0.05"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="25dp"
                android:background="@android:color/transparent"
                android:contentDescription="@string/share_icon_des"
                android:gravity="center"
                android:scaleType="fitCenter"
                android:src="@drawable/share_48"
                tools:ignore="TouchTargetSizeCheck" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/food_menu"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:layout_marginBottom="50dp"
            android:layout_weight="1"
            android:background="@drawable/border_radius_bottom"
            android:elevation="3dp"
            android:orientation="vertical"
            android:padding="30dp">

        </LinearLayout>

    </LinearLayout>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/menus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/scd5"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        app:itemPaddingBottom="10dp"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/bottom"
        tools:ignore="VisualLintBottomNav" />
</LinearLayout>